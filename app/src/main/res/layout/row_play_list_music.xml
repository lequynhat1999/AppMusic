<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewIndexListMusic"
            android:layout_margin="10dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="17sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNameSongListMusic"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textViewDanhSachInDex"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="ten ca khuc"
            android:textColor="@color/white"
            android:textSize="17sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewNameMusicalListMusic"
            android:layout_below="@+id/textViewNameSongListMusic"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textViewDanhSachInDex"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="duc phuc"
            android:textColor="@color/white"
            android:textSize="12sp"/>

    </RelativeLayout>

</RelativeLayout>