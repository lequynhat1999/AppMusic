<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewSearchSong"
        android:layout_margin="3dp"
        android:scaleType="fitXY"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageViewSearchSong"
        android:text="ten bai hat"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:id="@+id/textViewSearhNameSong"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="250dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/imageViewSearchSong"
        android:text="ten bai hat"
        android:textColor="#6e6d6d"
        android:textSize="18sp"
        android:id="@+id/textViewSearchNameMusican"
        android:layout_below="@+id/textViewSearhNameSong"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageViewSearchLike"
        android:src="@drawable/iconlove"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>