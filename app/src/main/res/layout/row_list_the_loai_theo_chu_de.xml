<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frameLayoutTheLoaiTheoChuDe"
            >
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:id="@+id/imageViewListTheLoaiTheoChuDe"
                android:scaleType="centerCrop"
                android:src="@drawable/iconlove"/>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/textViewNameTheLoaiTheoChuDe"
            android:ellipsize="end"
            android:gravity="left"
            android:lines="1"
            android:maxWidth="200dp"
            android:text="Nhac viet hot nhat nam"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="13sp"
            android:text="Various Artist"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>