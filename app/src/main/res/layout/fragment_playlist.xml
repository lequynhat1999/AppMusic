<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <TextView
    android:layout_marginBottom="15dp"
    android:id="@+id/textviewTitlePlaylist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:text="NHỊP ĐIỆU CẢM XÚC"
    android:textColor="@color/black"
    android:textSize="30sp"
    />

    <ListView
        android:id="@+id/listviewPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewTitlePlaylist">

    </ListView>

    <TextView
        android:paddingLeft="5dp"
        android:layout_below="@id/listviewPlaylist"
        android:layout_marginTop="8dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="8dp"
    android:id="@+id/textviewViewMorePlaylist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c9c7c7"
    android:drawableLeft="@drawable/iconmoreplaylist"
    android:drawablePadding="15dp"
    android:text="Xem thêm Playlist"
    android:textColor="#0a0a0a"
    android:textSize="20sp"
     />



</RelativeLayout>


